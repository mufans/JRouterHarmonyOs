{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "removeComments": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/",
    "./dist/",
    "./tests/",
    "./lib/",
    "./script/"
  ]
}
